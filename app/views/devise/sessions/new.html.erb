<div class="w3-container" style="width: 50%; margin: auto;">
  <div class="w3-padding-32"></div>
  <h2>Log in</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'w3-container w3-card-4' }) do |f| %>
    <div class="w3-padding-16"></div>
    <p>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w3-input' %>
      <%= f.label :email %>
    </p>

    <p>
      <%= f.password_field :password, autocomplete: "current-password", class: 'w3-input' %>
      <%= f.label :password %>
    </p>

    <% if devise_mapping.rememberable? -%>
      <p>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </p>
    <% end -%>

    <p>
      <%= f.submit "Log in", class: default_button_class %>
    </p>

    <p>
      <%= render "devise/shared/links" %>
    </p>
    <div class="w3-padding-16"></div>
  <% end %>
</div>

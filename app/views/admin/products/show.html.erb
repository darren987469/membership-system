<p>
  <strong>Name: </strong><%= @product.name %>
</p>

<p>
  <strong>Price: </strong><%= @product.price %>
</p>

<ul>
  <% @product.images.each do |image| %>
    <li>
      <%= image_tag(image, size: product_image_default_size) %>
    </li>
  <% end %>
</ul>

<%= link_to('Edit', edit_admin_product_path(@product)) %> |
